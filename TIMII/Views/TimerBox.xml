<!-- Timer Box - this is a small box view for the timer -->
<UIView
    backgroundColor="#C1E890"
    height="180"
    width="180"
    left="15"
    layer.shadowRadius="2.0"
    layer.shadowOpacity="1"
    layer.shadowColor="#AAA"
    layer.shadowOffset.width="5.0"
    layer.shadowOffset.height="5.0">
    

    <!-- Task Name Label -->
    <UILabel
        width="100%"
        top="height / 2"
        textAlignment="center"
        textColor="white"
        font="Avenir Next 16"
        text="Eating"
    />

    <!-- Daily Total Label -->
    <UILabel
        width="100%"
        top="previous.bottom"
        textAlignment="center"
        textColor="white"
        font="Avenir Next 10"
        text="Today:1h1m"
    />
    

    <!-- Time Label -->
    <UILabel
        width="100%"
        top="50% - height / 2"
        textAlignment="center"
        textColor="white"
        font="Avenir Next ultraLight 35"
        text="00:01"
    />
    
    <!-- Play Button -->
    <UIViewController
        xml="PlayButton.xml"
    />
    
</UIView>
