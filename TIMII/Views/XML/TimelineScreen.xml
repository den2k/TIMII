<!-- Timeilne Screen -->
<!-- TODO: 8.18.18 - DONE (8.22.18) Create Moleskine-like timeline view -->

<TimelineScreen view.backgroundColor="silverSand">

    <macro name="navBarHeight" value="50" />
    <macro name="weeklySideBarWidth" value="40" />
    <macro name="weeklySideBarHeight" value="100% - parent.safeAreaInsets.top - parent.safeAreaInsets.bottom - 30 - 7" />
    <macro name="dailyContentBackgroundColor" value="red" />
    <macro name="emptyContentBackgroundColor" value="white" />
    <macro name="todayContentBackgroundColor" value="cinnabar" />

    <!-- Month Top Bar -->
    <UIView
        width="40"
        height="30"
        top="parent.safeAreaInsets.top"
        left="0"
        backgroundColor="parent.backgroundColor">
        
        <!-- Month Label -->
        <UILabel
            text="WEEK"
            width="100%"
            height="auto"
            top="4"
            left="0"
            textAlignment="center"
            textColor="white"
            backgroundColor="parent.backgroundColor"
            font="Avenir Next 9"
        />
        <UILabel
            text="23"
            width="100%"
            height="auto"
            top="previous.bottom - 3"
            left="previous.left"
            textAlignment="center"
            textColor="white"
            backgroundColor="parent.backgroundColor"
            font="Avenir Next bold 12"
        />
    </UIView>

    <!-- Week Long Scroll View -->
    <UIScrollView
        outlet="timelineScrollView"
        contentSize.width="100%"
        contentSize.height="150%"
        top="previous.bottom"
        left="0"
        backgroundColor="white"
        contentInsetAdjustmentBehavior="never"
        isPagingEnabled="true"
        showsHorizontalScrollIndicator="false">

        <!-- Weekly Side Bar -->
        <UIView
            width="weeklySideBarWidth"
            height="weeklySideBarHeight"
            top="0"
            left="0"
            backgroundColor="white">
            
            <UIView
                template="TimelineDayTemplate.xml"
                dayNumberText="11"
                dayText="WED"
                height="parent.height / 7"
                backgroundColor="lynch"
            />
            <UIView
                template="TimelineDayTemplate.xml"
                dayNumberText="12"
                dayText="THU"
                height="parent.height / 7"
                top="previous.bottom + 1"
            />
            <UIView
                template="TimelineDayTemplate.xml"
                dayNumberText="13"
                dayText="FRI"
                height="parent.height / 7"
                top="previous.bottom + 1"
            />
            <UIView
                template="TimelineDayTemplate.xml"
                dayNumberText="14"
                dayText="SAT"
                height="parent.height / 7"
                top="previous.bottom + 1"
            />
            <UIView
                template="TimelineDayTemplate.xml"
                dayNumberText="15"
                dayText="SUN"
                height="parent.height / 7"
                top="previous.bottom + 1"
            />
            <UIView
                template="TimelineDayTemplate.xml"
                dayNumberText="16"
                dayText="MON"
                height="parent.height / 7"
                top="previous.bottom + 1"
            />
            <UIView
                template="TimelineDayTemplate.xml"
                dayNumberText="17"
                dayText="TUE"
                height="parent.height / 7"
                top="previous.bottom + 1"
            />

        </UIView>

        <!-- Weekly Content View -->
        <UIView
            width="100% - weeklySideBarWidth - 2"
            height="weeklySideBarHeight"
            top="previous.top"
            left="weeklySideBarWidth + 1"
            backgroundColor="white">
            
            <!-- Daily Content View -->
            <UIView
                height="parent.height / 7"
                top="previous.bottom"
                backgroundColor="todayContentBackgroundColor">
                
                <!-- Inner Vertically Centered View -->
                <UIView
                    width="100%"
                    height="auto"
                    top="(parent.height - height)/2"
                    backgroundColor="">
                
                    <UILabel
                        text="First journal entry. This is a lot of fun. Went to pizza parler with friends."
                        width="90%"
                        height="20"
                        top="0"
                        left="10"
                        textColor="white"
                        textAlignment="left"
                        font="Avenir Next 12"
                        backgroundColor=""
                    />
                    <UILabel
                        text="12:03 PM"
                        width="14%"
                        height="10"
                        top="previous.bottom + 4"
                        left="0"
                        textColor="white"
                        textAlignment="right"
                        font="Avenir Next 9"
                        backgroundColor=""
                    />
                    <UILabel
                        text="Lunch with team"
                        width="72%"
                        height="10"
                        top="previous.top"
                        left="previous.right + 8"
                        textColor="white"
                        textAlignment="left"
                        font="Avenir Next 9"
                        backgroundColor=""
                    />
                    <UILabel
                        text="[0:48]"
                        width="40"
                        height="10"
                        top="previous.top"
                        right="0"
                        textColor="white"
                        textAlignment="center"
                        font="Avenir Next 9"
                        backgroundColor=""
                    />
                    <UILabel
                        text="1:12 PM"
                        width="14%"
                        height="10"
                        top="previous.bottom"
                        left="0"
                        textColor="white"
                        textAlignment="right"
                        font="Avenir Next 9"
                    />
                    <UILabel
                    text="Marching band practice"
                        width="72%"
                        height="10"
                        top="previous.top"
                        left="previous.right + 8"
                        textColor="white"
                        textAlignment="left"
                        font="Avenir Next 9"
                    />
                    <UILabel
                        text="[4:03]"
                        width="40"
                        height="10"
                        top="previous.top"
                        right="0"
                        textColor="white"
                        textAlignment="center"
                        font="Avenir Next 9"
                        backgroundColor=""
                    />
                </UIView>
            </UIView>

            <UIView template="TimelineEmptyDayTemplate.xml" />

            <UIView template="TimelineEmptyDayTemplate.xml" />
                
            <UIView
                height="parent.height / 7"
                top="previous.bottom + 1"
                backgroundColor="dailyContentBackgroundColor">
                
                <!-- Inner Vertically Centered View -->
                <UIView
                    width="100%"
                    height="auto"
                    top="(parent.height - height)/2"
                    backgroundColor="">
                    
                    <UILabel
                        text="10:33 AM"
                        width="14%"
                        height="10"
                        top=""
                        left="0"
                        textColor="white"
                        textAlignment="right"
                        font="Avenir Next 9"
                        backgroundColor=""
                    />
                    <UILabel
                        text="Meeting"
                        width="72%"
                        height="10"
                        top="previous.top"
                        left="previous.right + 8"
                        textColor="white"
                        textAlignment="left"
                        font="Avenir Next 9"
                        backgroundColor=""
                    />
                    <UILabel
                        text="[0:31]"
                        width="40"
                        height="10"
                        top="previous.top"
                        right="0"
                        textColor="white"
                        textAlignment="center"
                        font="Avenir Next 9"
                        backgroundColor=""
                    />
                    <UILabel
                        text="2:17 PM"
                        width="14%"
                        height="10"
                        top="previous.bottom"
                        left="0"
                        textColor="white"
                        textAlignment="right"
                        font="Avenir Next 9"
                    />
                    <UILabel
                        text="Math homework"
                        width="72%"
                        height="10"
                        top="previous.top"
                        left="previous.right + 8"
                        textColor="white"
                        textAlignment="left"
                        font="Avenir Next 9"
                    />
                    <UILabel
                        text="[1:09]"
                        width="40"
                        height="10"
                        top="previous.top"
                        right="0"
                        textColor="white"
                        textAlignment="center"
                        font="Avenir Next 9"
                        backgroundColor=""
                    />
                </UIView>

            </UIView>

            <UIView template="TimelineEmptyDayTemplate.xml" />

            <UIView
                height="parent.height / 7"
                top="previous.bottom + 1"
                backgroundColor="dailyContentBackgroundColor">

                <!-- Inner Vertically Centered View -->
                <UIView
                    width="100%"
                    height="auto"
                    top="(parent.height - height)/2"
                    backgroundColor="">
                    
                    <UILabel
                        text="7:13 AM"
                        width="14%"
                        height="10"
                        top=""
                        left="0"
                        textColor="white"
                        textAlignment="right"
                        font="Avenir Next 9"
                        backgroundColor=""
                    />
                    <UILabel
                        text="Run with daddy"
                        width="72%"
                        height="10"
                        top="previous.top"
                        left="previous.right + 8"
                        textColor="white"
                        textAlignment="left"
                        font="Avenir Next 9"
                        backgroundColor=""
                    />
                    <UILabel
                        text="[0:17]"
                        width="40"
                        height="10"
                        top="previous.top"
                        right="0"
                        textColor="white"
                        textAlignment="center"
                        font="Avenir Next 9"
                        backgroundColor=""
                    />

                </UIView>

            </UIView>

            <UIView template="TimelineEmptyDayTemplate.xml" />


        </UIView>

    </UIScrollView>

</TimelineScreen>
