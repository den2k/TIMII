<!-- TimerBox - A rectangle box view for the timer -->
<!-- 8.14.18 - DONE (8.14.18) Made Start button easier to press and visually more engaging -->

<UIView
    backgroundColor="isTimerRunning ? UIColor.porcelain : UIColor.camo"
    height="240"
    width="100% - 20"
    layer.cornerRadius="15"
    layer.shadowRadius="2.0"
    layer.shadowOpacity="1"
    layer.shadowColor="#AAA"
    layer.shadowOffset.width="3.0"
    layer.shadowOffset.height="3.0">
    
    <!-- Timer Name -->
    <UITextField
        outlet="timerNameTextField"
        placeholder="enter timer name"
        text="{name}"
        width="80%"
        height="40"
        left="50% - width/2"
        layer.cornerRadius="height/2"
        top="20"
        textAlignment="center"
        textColor="{isTimerRunning ? UIColor.black : UIColor.gray}"
        backgroundColor="{isTimerRunning ? parent.backgroundColor : UIColor.white}"
        font="Avenir Next 18"
    />
    
    <!-- Daily Total Label -->
    <!-- 8.5 - removed for now until working
    <UILabel
        text="Today:1h1m"
        width="100%"
        top="previous.bottom"
        textAlignment="center"
        textColor="isTimerRunning ? UIColor.black : UIColor.white"
        font="Avenir Next 10"
    />
    -->
    
    <!-- Minute -->
    <UILabel
        text="{minute}"
        top="60% - height/2"
        left="33% - width/2"
        textAlignment="center"
        textColor="isTimerRunning ? UIColor.black : UIColor.white"
        font="Avenir Next ultraLight 70"
    />
    <UILabel
        text="m"
        top="previous.top + 54"
        left="previous.right - 2"
        textColor="isTimerRunning ? UIColor.black : UIColor.white"
        font="Avenir Next 16"
    />
    
    <!-- : -->
    <UILabel
        text=":"
        top="previous.top - 58"
        left="50% - width/2"
        textAlignment="center"
        textColor="isTimerRunning ? UIColor.black : UIColor.white"
        font="Avenir Next ultraLight 70"
    />

    <!-- Second -->
    <UILabel
        text="{second}"
        top="previous.top + 5"
        right="33% - width/2"
        textAlignment="center"
        textColor="isTimerRunning ? UIColor.black : UIColor.white"
        font="Avenir Next ultraLight 70"
    />
    <UILabel
        text="s"
        top="previous.top + 54"
        left="previous.right - 2"
        textColor="isTimerRunning ? UIColor.black : UIColor.white"
        font="Avenir Next 16"
    />
    
    <!-- START / PAUSE BUTTON -->
    <UIButton
        title="{isTimerRunning ? 'Pause':'Start'}"
        touchUpInside="{isTimerRunning ? 'pauseTimer':'startTimer'}"
        backgroundColor="{isTimerRunning ? parent.backgroundColor : UIColor.ironOpaque}"
        layer.cornerRadius="height/2"
        bottom="{isTimerRunning ? 10 : 40% - height/2}"
        left="50% - width/2"
        width="height"
        height="{isTimerRunning ? 50 : 52% }"
        titleColor="isTimerRunning ? UIColor.black : UIColor.black"
    />
    
    <UIButton
        title="Reset"
        touchUpInside="resetTimer"
        bottom="10"
        right="20"
        titleColor="UIColor.white"
        isHidden="isTimerRunning ? true : false"
    />
    
</UIView>

