<!-- TimerBox - A square box view for the timer -->
<UIView
    backgroundColor="isTimerRunning ? UIColor.porcelain : UIColor.camo"
    height="180"
    width="100% - 20"
    layer.shadowRadius="2.0"
    layer.shadowOpacity="1"
    layer.shadowColor="#AAA"
    layer.shadowOffset.width="5.0"
    layer.shadowOffset.height="5.0">
    
    <!-- Task Name Label -->
    <UILabel
        text="{name}"
        width="100%"
        top="height / 2 + 5"
        textAlignment="center"
        textColor="isTimerRunning ? UIColor.black : UIColor.white"
        font="Avenir Next 16"
    />
    
    <!-- Daily Total Label -->
    <UILabel
        text="Today:1h1m"
        width="100%"
        top="previous.bottom"
        textAlignment="center"
        textColor="isTimerRunning ? UIColor.black : UIColor.white"
        font="Avenir Next 10"
    />
    
    <!-- Minute -->
    <UILabel
        text="{minute}"
        top="50% - height/2 + 5"
        left="33% - width/2"
        textAlignment="center"
        textColor="isTimerRunning ? UIColor.black : UIColor.white"
        font="Avenir Next ultraLight 70"
    />
    <UILabel
        text="m"
        top="50% - height/2 + 22"
        left="previous.right - 2"
        textColor="isTimerRunning ? UIColor.black : UIColor.white"
        font="Avenir Next 16"
    />
    
    <!-- : -->
    <UILabel
        text=":"
        top="50% - height/2"
        left="50% - width/2"
        textAlignment="center"
        textColor="isTimerRunning ? UIColor.black : UIColor.white"
        font="Avenir Next ultraLight 70"
    />

    <!-- Second -->
    <UILabel
        text="{second}"
        top="50% - height/2 + 5"
        right="33% - width/2"
        textAlignment="center"
        textColor="isTimerRunning ? UIColor.black : UIColor.white"
        font="Avenir Next ultraLight 70"
    />
    <UILabel
        text="s"
        top="50% - height/2 + 22"
        left="previous.right - 2"
        textColor="isTimerRunning ? UIColor.black : UIColor.white"
        font="Avenir Next 16"
    />
    
    <UIButton
        title="{isTimerRunning ? 'Pause':'Start'}"
        touchUpInside="{isTimerRunning ? 'startTimer' : 'startTimer'}"
        bottom="10"
        left="50% - width/2"
        width="100%"
        height="20%"
        titleColor="isTimerRunning ? UIColor.black : UIColor.white"
    />
    
</UIView>

