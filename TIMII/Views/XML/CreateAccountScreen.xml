<!-- Create Account Screen -->
<UIView
    backgroundColor="UIColor.lightTan">
    
    <!-- TIMII Logo -->
    <UIImageView
        image="timer.png"
        top="isKeyboardVisible ? 8% - height/2 : 24% - height/2"
        left="50% - width/2"
        width="60"
        height="60"
    />
    
    <!-- TIMII -->
    <UILabel
        text="TIMII"
        top="previous.bottom + 10"
        textAlignment="center"
        width="100%"
        textColor="UIColor.black"
        font="Avenir Next ultraLight 28"
    />
    
    <!-- email -->
    <UITextField
        outlet = "emailTextField"
        placeholder="email"
        top="previous.bottom + 20"
        left="50% - width/2"
        width="100% - 40"
        height="44"
        layer.cornerRadius="22"
        backgroundColor="UIColor.cararra"
        textAlignment="center"
    />
    
    <!-- password -->
    <UITextField
        outlet = "passwordTextField"
        placeholder="password"
        top="previous.bottom + 15"
        left="50% - width/2"
        width="100% - 40"
        height="44"
        layer.cornerRadius="22"
        backgroundColor="UIColor.cararra"
        textAlignment="center"
    />

    <!-- password verify -->
    <UITextField
        placeholder="verify password"
        top="previous.bottom + 15"
        left="50% - width/2"
        width="100% - 40"
        height="44"
        layer.cornerRadius="22"
        backgroundColor="UIColor.cararra"
        textAlignment="center"
    />
    
    <!-- Create Button -->
    <UIButton
        touchUpInside="handleCreateAccount"
        title="Create Account"
        top="previous.bottom + 30"
        left="50% - width/2"
        width="100% - 120"
        height="66"
        layer.cornerRadius="33"
        backgroundColor="UIColor.camo"
    />
    
    <!-- Sign in -->
    <UIButton
        touchUpInside="loginScreen"
        title="Or sign in"
        top="previous.bottom + 15"
        left="50% - width/2"
        width="100% - 40"
        height="auto"
        titleColor="UIColor.white"
    />
    
</UIView>


