<!-- Timer Row - this is a row view for the timer -->
<UIView
    backgroundColor="// #FCFCFC"
    height="50"
    width="100%">

    <!-- Content Type Icon -->
    <UIImageView
        backgroundColor=""
        bottom=""
        contentMode=""
        height="16"
        image="timer.png"
        isHidden="// isDayExpanded ? false : true"
        left="8"
        tintColor=""
        top="50% - height / 2"
        width="16"
    />
    

    <!-- Task Name Label -->
    <UILabel
        font="Avenir Next 14"
        left="previous.right + 8"
        text="Woke up"
        textAlignment="left"
        textColor="#404040"
        top="previous.top"
        width="auto"
    />
    

    <!-- Task Time Interval -->
    <UILabel
        font="Avenir Next 14"
        right="8"
        text="5:31a"
        textAlignment="left"
        textColor="#404040"
        top="previous.top"
        width="auto"
    />
</UIView>
