<!-- Main - the main container for the app -->
<UITabBarController view.backgroundColor="">

    <!-- Header -->
    <UIView
        xml="HeaderContainer.xml"
        top="parent.safeAreaInsets.top"
        width="100%"
        height="auto"
    />

    <UITabBar tintColor="camo" />
    
    <!-- Home Screen -->
    <UIViewController
        xml="HomeScreen.xml"
        tabBarItem.image="home.png"
        title="Home"
    />
    
    <!-- Timer Screen -->
     <UIViewController
         xml="TimerScreen.xml"
         tabBarItem.image="timer.png"
         title="Timer"
     />

    <!-- Setting Screen -->
    <UIViewController
        xml="SettingScreen.xml"
        tabBarItem.image="setting.png"
        title="Setting"
    />

</UITabBarController>
