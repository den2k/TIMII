<!-- Main - the main container for the app -->
<UITabBarController view.backgroundColor="">

    <macro name="topHeaderContainerHeight" value="50" />

    <!-- Header -->
    <UIView
        xml="HeaderContainer.xml"
        top="parent.safeAreaInsets.top"
        width="100%"
        height="auto"
    />

    <UITabBar
        tintColor="black"
        isTranslucent="true"
        alpha="0.88"
    />
    
    <!-- Timeline Screen -->
    <UIViewController
        xml="TimelineScreen.xml"
        tabBarItem.image="home.png"
        title="Timeline"
    />
    
    <!-- Timer Screen -->
     <UIViewController
         xml="TimerScreen.xml"
         tabBarItem.image="timer.png"
         title="Timer"
     />

    <!-- Setting Screen -->
    <UIViewController
        xml="SettingScreen.xml"
        tabBarItem.image="setting.png"
        title="Profile"
    />

</UITabBarController>
