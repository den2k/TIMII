<!-- Main - the main container for the app -->
<!-- It is just a tab view so different View Controllers can be presented -->

<UITabBarController view.backgroundColor="clear">

    <UITabBar
        tintColor="black"
        isTranslucent="true"
        alpha="0.88"
    />
    
    <UIViewController
        xml="TimelineScreen.xml"
        tabBarItem.image="home.png"
        title="Timeline"
    />
    
     <UIViewController
         xml="TimelineTableScreen.xml"
         tabBarItem.image="timer.png"
         title="Timer"
     />

     <UIViewController
        xml="SettingScreen.xml"
        tabBarItem.image="setting.png"
        title="Profile"
    />

</UITabBarController>
