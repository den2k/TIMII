<!-- Login Screen -->
<UIView
    backgroundColor="UIColor.softWhite">
    
    <!-- TIMII Logo -->
    <UIImageView
        image="timer.png"
        top="isKeyboardVisible ? 10% - height/2 : 24% - height/2"
        left="50% - width/2"
        width="60"
        height="60"
    />

    <!-- TIMII Name -->
    <UILabel
        text="TIMII"
        top="previous.bottom + 10"
        textAlignment="center"
        width="100%"
        textColor="UIColor.black"
        font="Avenir Next ultraLight 45"
    />

    <!-- error -->
    <UILabel
        outlet="errorLabel"
        text="{error}"
        top="previous.bottom + 10"
        left="50% - width/2"
        textAlignment="center"
        width="60%"
        textColor="UIColor.red"
        numberOfLines="4"
        font="Avenir Next 16"
    />
    
    <!-- email -->
    <UITextField
        outlet="emailTextField"
        placeholder="enter your email"
        text="{email}"
        top="previous.bottom + 20"
        left="50% - width/2"
        width="100% - 40"
        height="46"
        layer.cornerRadius="23"
        backgroundColor="UIColor.cararra"
        textAlignment="center"
    />
    
    <!-- password -->
    <UITextField
        outlet="passwordTextField"
        placeholder="enter your password"
        text="{password}"
        top="previous.bottom + 15"
        left="50% - width/2"
        width="100% - 40"
        height="46"
        layer.cornerRadius="23"
        backgroundColor="UIColor.cararra"
        textAlignment="center"
    />
    
    <!-- Sign in Button -->
    <UIButton
        touchUpInside="handleLogin"
        title="Sign in"
        backgroundColor="UIColor.mintGreen"
        top="previous.bottom + 30"
        left="50% - width/2"
        width="100% - 120"
        height="66"
        layer.cornerRadius="33"
    />
    
    <!-- Sign Up -->
    <UIButton
        touchUpInside="createAccountScreen"
        title="Or create an account"
        top="previous.bottom + 15"
        left="50% - width/2"
        width="100% - 40"
        height="auto"
        titleColor="#9AACB1"
    />

</UIView>

