<!-- Login Screen -->
<UIView
    backgroundColor="UIColor.salem">
    
    <!-- TIMII Logo -->
    <UIImageView
        image="timer.png"
        top="isKeyboardVisible ? 12% - height/2 : 30% - height/2"
        left="50% - width/2"
        width="60"
        height="60"
    />

    <!-- TIMII -->
    <UILabel
        text="TIMII"
        top="previous.bottom + 10"
        textAlignment="center"
        width="100%"
        textColor="UIColor.white"
        font="Avenir Next ultraLight 28"
    />

    <!-- user name / email -->
    <UITextField
        placeholder="user name / email"
        top="previous.bottom + 30"
        left="50% - width/2"
        width="100% - 40"
        height="45"
        layer.cornerRadius="5"
        backgroundColor="UIColor.cararra"
        textAlignment="center"
    />
    
    <!-- password -->
    <UITextField
        placeholder="password"
        top="previous.bottom + 15"
        left="50% - width/2"
        width="100% - 40"
        height="45"
        layer.cornerRadius="5"
        backgroundColor="UIColor.cararra"
        textAlignment="center"
    />
    
    <!-- Login Button -->
    <UIButton
        top="previous.bottom + 30"
        left="50% - width/2"
        width="100% - 40"
        height="65"
        layer.cornerRadius="5"
        title="Login"
        backgroundColor="UIColor.summerGreen"
        touchUpInside=""
    />

</UIView>

