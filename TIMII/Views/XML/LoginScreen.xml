<!-- Login Screen -->
<UIView
    backgroundColor="UIColor.salem">
    
    <!-- TIMII Logo -->
    <UIImageView
        image="timer.png"
        top="isKeyboardVisible ? 12% - height/2 : 28% - height/2"
        left="50% - width/2"
        width="60"
        height="60"
    />

    <!-- TIMII -->
    <UILabel
        text="TIMII"
        top="previous.bottom + 10"
        textAlignment="center"
        width="100%"
        textColor="UIColor.white"
        font="Avenir Next ultraLight 28"
    />

    <!-- email -->
    <UITextField
        outlet="emailTextField"
        placeholder="enter your email"
        text="{email}"
        top="previous.bottom + 30"
        left="50% - width/2"
        width="100% - 40"
        height="45"
        layer.cornerRadius="5"
        backgroundColor="UIColor.cararra"
        textAlignment="center"
    />
    
    <!-- password -->
    <UITextField
        outlet="passwordTextField"
        placeholder="enter your password"
        text="{password}"
        top="previous.bottom + 15"
        left="50% - width/2"
        width="100% - 40"
        height="45"
        layer.cornerRadius="5"
        backgroundColor="UIColor.cararra"
        textAlignment="center"
    />
    
    <!-- Login Button -->
    <UIButton
        title="Sign in"
        backgroundColor="UIColor.summerGreen"
        touchUpInside="handleLogin"
        top="previous.bottom + 30"
        left="50% - width/2"
        width="100% - 40"
        height="65"
        layer.cornerRadius="5"
    />
    
    <!-- Sign Up -->
    <UIButton
        title="Or create an account"
        touchUpInside="createAccountScreen"
        top="previous.bottom + 10"
        left="50% - width/2"
        width="100% - 40"
        height="auto"
    />

</UIView>

