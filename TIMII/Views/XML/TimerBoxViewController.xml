<!-- TimerBoxViewController - this is a square box view for the timer -->
<UIView
    backgroundColor="isTimerRunning ? #D64541 : #26A65B"
    height="180"
    width="180"
    layer.shadowRadius="2.0"
    layer.shadowOpacity="1"
    layer.shadowColor="#AAA"
    layer.shadowOffset.width="5.0"
    layer.shadowOffset.height="5.0">
    
    <!-- Task Name Label -->
    <UILabel
        text="{name}"
        width="100%"
        top="height / 2"
        textAlignment="center"
        textColor="#ECECEC"
        font="Avenir Next 16"
    />
    
    <!-- Daily Total Label -->
    <UILabel
        text="Today:1h1m"
        width="100%"
        top="previous.bottom"
        textAlignment="center"
        textColor="white"
        font="Avenir Next 10"
    />
    
    <!-- Minute -->
    <UILabel
        text="{minute}"
        top="50% - height/2"
        left="33% - width/2"
        textAlignment="center"
        textColor="white"
        font="Avenir Next ultraLight 35"
    />
    
    <!-- : -->
    <UILabel
        text=":"
        top="previous.top"
        left="50% - width/2"
        textAlignment="center"
        textColor="white"
        font="Avenir Next ultraLight 35"
    />

    <!-- Second -->
    <UILabel
        text="{second}"
        top="previous.top"
        right="33% - width/2"
        textAlignment="center"
        textColor="white"
        font="Avenir Next ultraLight 35"
    />

    <UIButton
        title="{isTimerRunning ? 'Pause':'Start'}"
        touchUpInside="{isTimerRunning ? 'startTimer' : 'startTimer'}"
        top="previous.bottom + 5"
        left="50% - width/2"
        width="100%"
        height="30%"
    />
    
</UIView>

