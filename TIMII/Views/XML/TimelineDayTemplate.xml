<!-- TimelineDayTemplate.xml -->

<!-- This shows the day -->
<UIView
    width=""
    height=""
    top="0"
    left="0"
    backgroundColor="dailyContentBackgroundColor">
    
    <param name="dayNumberText" type="String"/>
    <param name="dayText" type="String"/>
    <macro name="centerHeightSpacing" value="(parent.height - height)/2" />
    
    <UIView
        height="auto"
        top="centerHeightSpacing">
        
        <UILabel
            text="{dayText}"
            width="100%"
            height="auto"
            top=""
            left="previous.left"
            textAlignment="center"
            textColor="dateTextColor"
            backgroundColor=""
            font="14"
        />
        <UILabel
            text="{dayNumberText}"
            width="100%"
            height="auto"
            top="previous.bottom - 3"
            left="0"
            textAlignment="center"
            textColor="dateTextColor"
            backgroundColor=""
            font="Avenir Next bold 22"
        />
    </UIView>
</UIView>
