<!-- Home Screen -->
<!-- TODO: 8.18.18 - Create Moleskine-like timeline view -->

<HomeScreen view.backgroundColor="silverSand">

    <macro name="navBarHeight" value="50" />
    <macro name="weeklySideBarWidth" value="40" />
    <macro name="weeklySideBarHeight" value="100% - 30 - 7" />
    <macro name="dailyContentBackgroundColor" value="camo" />
    <macro name="todayContentBackgroundColor" value="black" />

    <!-- Month Top Bar -->
    <UIView
        width="40"
        height="30"
        top="parent.safeAreaInsets.top"
        left="0"
        backgroundColor="parent.backgroundColor">
        
        <!-- Month Label -->
        <UILabel
            text="SEPT"
            width="100%"
            height="auto"
            top="4"
            left="0"
            textAlignment="center"
            textColor="white"
            backgroundColor="parent.backgroundColor"
            font="Avenir Next bold 10"
        />
        <UILabel
            text="2018"
            width="100%"
            height="auto"
            top="previous.bottom"
            left="previous.left"
            textAlignment="center"
            textColor="white"
            backgroundColor="parent.backgroundColor"
            font="Avenir Next 9"
        />
    </UIView>

    <!-- Week Long Scroll View -->
    <UIScrollView
        outlet="homeScrollView"
        contentSize.width="100%"
        contentSize.height="150%"
        top="previous.bottom"
        left="0"
        backgroundColor="parent.backgroundColor"
        contentInsetAdjustmentBehavior="never"
        isPagingEnabled="true"
        showsHorizontalScrollIndicator="false">

        <!-- Weekly Side Bar -->
        <UIView
            width="weeklySideBarWidth"
            height="weeklySideBarHeight"
            top="0"
            left="0"
            backgroundColor="parent.backgroundColor">
            
            <UIView
                template="HomeDayTextTemplate.xml"
                dayNumberText="11"
                dayText="WED"
                height="parent.height / 7"
            />
            <UIView
                template="HomeDayTextTemplate.xml"
                dayNumberText="12"
                dayText="THU"
                height="parent.height / 7"
                top="previous.bottom + 1"
            />
            <UIView
                template="HomeDayTextTemplate.xml"
                dayNumberText="13"
                dayText="FRI"
                height="parent.height / 7"
                top="previous.bottom + 1"
            />
            <UIView
                template="HomeDayTextTemplate.xml"
                dayNumberText="14"
                dayText="SAT"
                height="parent.height / 7"
                top="previous.bottom + 1"
            />
            <UIView
                template="HomeDayTextTemplate.xml"
                dayNumberText="15"
                dayText="SUN"
                height="parent.height / 7"
                top="previous.bottom + 1"
            />
            <UIView
                template="HomeDayTextTemplate.xml"
                dayNumberText="16"
                dayText="MON"
                height="parent.height / 7"
                top="previous.bottom + 1"
            />
            <UIView
                template="HomeDayTextTemplate.xml"
                dayNumberText="17"
                dayText="TUE"
                height="parent.height / 7"
                top="previous.bottom + 1"
            />
            <UIView
                template="HomeDayTextTemplate.xml"
                dayNumberText="18"
                dayText="WED"
                height="parent.height / 7"
                top="previous.bottom + 1"
            />
        </UIView>

        <!-- Weekly Content View -->
        <UIView
            width="100% - weeklySideBarWidth - 2"
            height="weeklySideBarHeight"
            top="previous.top"
            left="weeklySideBarWidth + 1"
            backgroundColor="white">
            
            <!-- Daily Content View -->
            <UIView
                height="parent.height / 7"
                top="previous.bottom"
                backgroundColor="todayContentBackgroundColor">
                
                <!-- Inner Vertically Centered View -->
                <UIView
                    width="100%"
                    height="auto"
                    top="(parent.height - height)/2"
                    backgroundColor="">
                
                    <UILabel
                        text="12:00 PM"
                        width="14%"
                        height="20"
                        top=""
                        left="0"
                        textColor="white"
                        textAlignment="right"
                        font="Avenir Next 9"
                        backgroundColor=""
                    />
                    <UILabel
                        text="Lunch with team"
                        width="72%"
                        height="20"
                        top="previous.top"
                        left="previous.right + 8"
                        textColor="white"
                        textAlignment="left"
                        font="Avenir Next 16"
                        backgroundColor=""
                    />
                    <UILabel
                        text="[0:48]"
                        width="40"
                        height="20"
                        top="previous.top"
                        right="0"
                        textColor="white"
                        textAlignment="center"
                        font="Avenir Next 9"
                        backgroundColor=""
                    />
                    <UILabel
                        text="1:00 PM"
                        width="14%"
                        height="20"
                        top="previous.bottom"
                        left="0"
                        textColor="white"
                        textAlignment="right"
                        font="Avenir Next 9"
                    />
                    <UILabel
                    text="Marching band practice"
                        width="72%"
                        height="20"
                        top="previous.top"
                        left="previous.right + 8"
                        textColor="white"
                        textAlignment="left"
                        font="Avenir Next 16"
                    />
                    <UILabel
                        text="[4:03]"
                        width="40"
                        height="20"
                        top="previous.top"
                        right="0"
                        textColor="white"
                        textAlignment="center"
                        font="Avenir Next 9"
                        backgroundColor=""
                    />
                </UIView>
            </UIView>
            
            <UIView
                height="parent.height / 7"
                top="previous.bottom + 1"
                backgroundColor="dailyContentBackgroundColor">
            </UIView>
            <UIView
                height="parent.height / 7"
                top="previous.bottom + 1"
                backgroundColor="dailyContentBackgroundColor">
            </UIView>
            <UIView
                height="parent.height / 7"
                top="previous.bottom + 1"
                backgroundColor="dailyContentBackgroundColor">
            </UIView>
            <UIView
                height="parent.height / 7"
                top="previous.bottom + 1"
                backgroundColor="dailyContentBackgroundColor">
            </UIView>
            <UIView
                height="parent.height / 7"
                top="previous.bottom + 1"
                backgroundColor="dailyContentBackgroundColor">
            </UIView>
            <UIView
                height="parent.height / 7"
                top="previous.bottom + 1"
                backgroundColor="dailyContentBackgroundColor">
            </UIView>
            <UIView
                height="parent.height / 7"
                top="previous.bottom + 1"
                backgroundColor="dailyContentBackgroundColor">
            </UIView>
        </UIView>

    </UIScrollView>

</HomeScreen>
