<!-- Home Screen -->
<HomeScreen view.backgroundColor="white">

    <!-- Active Timer Bar -->
    <UIScrollView
        top="parent.safeAreaInsets.top + 100"
        height="170"
        backgroundColor="white"
        contentInsetAdjustmentBehavior="never">
        
        <UIView xml="TimerBox.xml" left="10" top="10"/>
        <UIView xml="TimerBox.xml" left="previous.right+10" top="previous.top" />
        <UIView xml="TimerBox.xml" left="previous.right+10" top="previous.top" />
    </UIScrollView>


    <!-- List of Timers -->
    <UIScrollView
        top="previous.bottom + 5"
        height="100% - previous.height"
        backgroundColor="blue"
        contentInsetAdjustmentBehavior="never">
        
        <UIView xml="TimerRow.xml" left="0" top="0"/>
        <UIView xml="TimerRow.xml" left="0" top="previous.bottom + 2" />
        <UIView xml="TimerRow.xml" left="0" top="previous.bottom + 2" />
        <UIView xml="TimerRow.xml" left="0" top="previous.bottom + 2" />
        <UIView xml="TimerRow.xml" left="0" top="previous.bottom + 2" />
        <UIView xml="TimerRow.xml" left="0" top="previous.bottom + 2" />
        <UIView xml="TimerRow.xml" left="0" top="previous.bottom + 2" />
        <UIView xml="TimerRow.xml" left="0" top="previous.bottom + 2" />
        <UIView xml="TimerRow.xml" left="0" top="previous.bottom + 2" />
        <UIView xml="TimerRow.xml" left="0" top="previous.bottom + 2" />
        <UIView xml="TimerRow.xml" left="0" top="previous.bottom + 2" />
        <UIView xml="TimerRow.xml" left="0" top="previous.bottom + 2" />
        <UIView xml="TimerRow.xml" left="0" top="previous.bottom + 2" />
        <UIView xml="TimerRow.xml" left="0" top="previous.bottom + 2" />
        <UIView xml="TimerRow.xml" left="0" top="previous.bottom + 2" />
        <UIView xml="TimerRow.xml" left="0" top="previous.bottom + 2" />
    </UIScrollView>


</HomeScreen>
