<StartButton
    outlet="startButton">
    
    <!-- Floating button -->
    <UIView
        bottom="previous.bottom"
        height="50"
        left="0"
        width="100%">
        
        <UIButton
            top="10"
            bottom="10"
            left="safeAreaInsets.left + 15"
            right="safeAreaInsets.right + 15"
            backgroundColor="isToggled ? UIColor.red : UIColor.green"
            layer.cornerRadius="5"
            title="{isToggled ? 'Pause' : 'Start'}"
            touchUpInside="{isToggled ? 'pauseTimer' : 'startTimer'}"
        />
    </UIView>
    
</StartButton>

