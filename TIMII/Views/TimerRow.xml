<!-- Timer Row - this is a row view for the timer -->
<UIView
    backgroundColor="#BEBEBE"
    height="50"
    width="100%">
    
    <!-- Task Name Label -->
    <UILabel
        width="50%"
        left="15"
        top="50% - height/2"
        textAlignment="left"
        textColor="white"
        font="Avenir Next 18"
        text="Eating"
    />
    
    <!-- Daily Total Label -->
    <UILabel
        width="50%"
        top="50% - height/2"
        left="50% - width/2"
        textAlignment="center"
        textColor="white"
        font="Avenir Next 10"
        text="Today:1h1m"
    />
    
    <!-- Play Button -->
    <UIViewController
        xml="PlayButton.xml"
        width="25%"
        right="0"
    />

</UIView>
